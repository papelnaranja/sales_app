<h1>Sales#new</h1>
<p>Find me in app/views/sales/new.html.erb</p>

<div class="row">
    <div class="col-md-3">
    <%= form_with(model: @sale,  local: true) do |f| %>
        <div class="form-group">
            <%= f.label :cod, "Código" %>
            <%= f.number_field :cod , class:'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :detail, "Detalle de Venta" %>
            <%= f.text_area :detail , class:'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :category, "Categoría" %>
            <%= f.text_field :category, class:'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :value, "Valor" %>
            <%= f.number_field :value , class:'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :discount, "Descuento" %>
            <%= f.number_field :discount, class:'form-control' %>        
        </div>
        <div class="form-group">
            <%= f.check_box :tax %>
            <%= f.label :tax, 'Extento de IVA', class:"form-check-label"  %>
        </div>
        <%= f.submit "Crear", class:'btn btn-primary' %>
    <% end %>
    </div>
</div>